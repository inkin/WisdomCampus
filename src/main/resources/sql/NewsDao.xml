<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ocean.dao.NewsDao">
	<resultMap type="com.ocean.model.News" id="news">
		<result property="newsId" column="n_id"/>
		<result property="newsTitle" column="n_title"/>
		<result property="newsDate" column="n_date"/>
		<result property="author" column="n_author"/>
		<result property="newsContent" column="n_content"/>
		<result property="newsAddress" column="n_address"/>
		<result property="newsTypeId" column="newsType_id"/>
	</resultMap>
	
	<!-- <select id="selectNews" parameterType="string" resultMap="news">
		select * 
		from news
		where n_title like '%${_parameter}%'
	</select> -->
	
	<select id="selectNews" parameterType="string" resultMap="news">
		select *
		from news
		<trim prefix="where" prefixOverrides="and |or ">
			<if test="_parameter != null and _parameter != '' ">
				or n_title like '%${_parameter}%'
			</if>
			<if test="_parameter != null and _parameter != '' ">
				or n_content like '%${_parameter}%'
			</if>
			<if test="_parameter != null and _parameter != '' "> 
				or n_author like '%${_parameter}%'
			</if>
			
		</trim>
	</select>
	
	<insert id="saveNews" parameterType="com.ocean.model.News">
		insert into news
		(
			n_id,
			n_title,
			n_author,
			n_date,
			n_content,
			n_address,
			newsType_id,
			n_status
		)
		values
		(
			#{newsId},
			#{newsTitle},
			#{newsAuthor},
			#{newsDate},
			#{newsContent},
			#{newsAddress},
			#{newsTypeId},
			#{newsStatus}
		)
	</insert>
	
	<update id="updateNews" parameterType="com.ocean.model.News">
		update news
		<set>
			<if test=" newsTitle != null and newsTitle != '' ">
				n_title=#{newsTitle},
			</if>
			<if test=" newsAuthor != null and newsAuthor != '' ">
				n_author=#{newsAuthor}, 
			</if>
			<if test=" newsContent != null and newsContent != '' ">
				n_content=#{newsContent}, 
			</if>
			<if test=" newsDate != null and newsDate != '' ">
				n_date=#{newsDate}, 
			</if>
			<if test=" newsAddress != null and newsAddress != '' ">
				n_author=#{newsAuthor}, 
			</if>
			<if test=" newsTypeId != null and newsTypeId != '' ">
				newsType_id=#{newsTypeId}
			</if>
		</set>
		where n_id=#{newsId}
			
	</update>
	
	<update id="publicNews" parameterType="string">
		update news
		set n_status='001'
		where n_id=#{newsId}
	</update>
	
	
</mapper>